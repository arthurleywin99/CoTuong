@model DemoAPI.ViewModels.JoinRoomViewModel
@{
    ViewBag.Title = "JoinRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Tham gia vào phòng</h2>
    @using (Html.BeginForm("JoinRoom", "Room"))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <div class="text-danger">@ViewData["Error"]</div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tham gia" class="btn btn-warning" />
                </div>
            </div>
        </div>
    }
</div>

