@model IEnumerable<DemoAPI.ViewModels.RoomViewModel>
@{
    ViewBag.Title = "GetAllRoom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <a class="btn btn-danger" href="@Url.Action("CreateRoom", "Chess")">Tạo phòng mới</a>
    <div class="row">
        <div class="col-md-5">
            <h3>
                <b>
                    Mã phòng
                </b>
            </h3>
        </div>
        <div class="col-md-3">
            <h3>
                <b>
                    Tên phòng
                </b>
            </h3>
        </div>
        <div class="col-md-1">
            <h3>
                <b>
                    Số người
                </b>
            </h3>
        </div>
        <div class="col-md-3"></div>
    </div>
    @foreach (var item in Model)
    {
        <div class="mb-5">
            <div class="row">
                <div class="col-md-5">
                    @item.Id
                </div>
                <div class="col-md-3">
                    @item.Name
                </div>
                <div class="col-md-1">
                    @item.JoinedCount/2
                </div>
                <div class="col-md-3 d-flex">
                    <a class="btn btn-success m-1" href="@Url.Action("JoinRoom", "Room", new { Id = item.Id })">Tham gia</a>
                    <a class="btn btn-warning m-1" href="#">Chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>